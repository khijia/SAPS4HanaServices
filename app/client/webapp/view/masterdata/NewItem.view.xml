<mvc:View controllerName="tc.com.controller.masterdata.NewItem"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core" height="100%"
    xmlns:mvc="sap.ui.core.mvc">
    <Page title="Master Data - Items List" id="dynamicPageId" showNavButton="true" navButtonPress=".onNavBack">
        <content >
            <f:SimpleForm id="formNewItem" title="Master Data - New Item" editable="true" layout="ResponsiveGridLayout" labelSpanM="2" emptySpanL="5" emptySpanM="5">
                <f:content>
                    <Label id="lblItemName" text="Item Name:" required="true"></Label>
                    <Input id="txtItemName"></Input>
                </f:content>
            </f:SimpleForm>
        </content>
        <footer>
            <Bar id="footer">
                <contentRight>
                    <Button id="btnSave" text="Save" press="onSave" type="Emphasized" icon="sap-icon://save"/>
                    <Button id="btnCancel" text="Cancel" press="onCancel" type="Emphasized" icon="sap-icon://undo"/>
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
